{
    "tasks": [
        {
            "type": "shell",
            "label": "buildproj",
            "windows": {
                "command": "${workspaceFolder}\\Builder\\Windows\\build.bat",
            },
            "linux": {
                "command": "/usr/bin/make",
                "args": [
                    "-c",
                    "${workspaceFolder}/Builder/Linux"
                ],
            },
            "osx": {
                "command": "/usr/bin/make",
                "args": [
                    "-c",
                    "${workspaceFolder}/Builder/Mac"
                ],
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Build the Project."
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "${workspaceFolder}\\Builder\\Windows\\clean.bat",
            "group": {
                "kind": "build",
                "isDefault": true
            },
        },
    ],
    "version": "2.0.0"
}